<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#FFFFFF"
    android:clickable="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="306dp"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/innerList"
            android:layout_width="match_parent"
            android:layout_height="658dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="105dp">

                <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo" />

                <Space
                    android:layout_width="100dp"
                    android:layout_height="103dp" />
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/userTypeTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:clickable="false"
                android:fitsSystemWindows="false"
                android:gravity="center"
                android:text="@string/finger_print_form"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/welcome_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/fp_initial_left"
                android:textColor="@color/dark_text"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/chevron1"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:rotation="90"
                android:layout_marginTop="-30dp"
                android:src="@drawable/chevron" />

            <ImageView
                android:id="@+id/chevron2"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:layout_marginTop="-70dp"
                android:rotation="90"
                android:scaleY="1"
                android:src="@drawable/chevron" />

            <ImageView
                android:id="@+id/chevron3"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:layout_marginTop="-70dp"
                android:rotation="90"
                android:src="@drawable/chevron" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
