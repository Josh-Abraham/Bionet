<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/outerFrameOnboarding"
        android:layout_width="306dp"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/innerList"
            android:layout_width="match_parent"
            android:layout_height="658dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="105dp">

                <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo" />

                <Space
                    android:layout_width="100dp"
                    android:layout_height="103dp" />
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <EditText
                android:id="@+id/userTypeTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:clickable="false"
                android:ems="10"
                android:fitsSystemWindows="false"
                android:focusable="false"
                android:gravity="center"
                android:hint="@string/onboarding_form"
                android:importantForAutofill="no"
                android:inputType="none"
                android:text="@string/onboarding_form"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:id="@+id/address_panel_1"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/street_address_tag"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="10px"
                        android:text="@string/street_address"
                        android:textSize="16sp" />


                    <EditText
                        android:id="@+id/street_address_onboarding"
                        android:layout_width="160dp"
                        android:layout_height="33dp"
                        android:height="35dp"
                        android:background="@drawable/text_field"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/ie_street_address"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="#838383"
                        android:textColorHighlight="#009688"
                        android:textColorHint="#959595"
                        android:textSize="16sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/apt_num_panel"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/aptNumTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="10px"
                        android:text="@string/apt_num"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/apt_num_onboarding"
                        android:layout_width="120dp"
                        android:layout_height="33dp"
                        android:height="33dp"
                        android:background="@drawable/text_field"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/ie_apt_num"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="#838383"
                        android:textColorHighlight="#009688"
                        android:textColorHint="#959595"
                        android:textSize="16sp" />
                </LinearLayout>
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:id="@+id/address_panel_2"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/city_tag"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="10px"
                        android:text="@string/city"
                        android:textSize="16sp" />


                    <EditText
                        android:id="@+id/city_onboarding"
                        android:layout_width="160dp"
                        android:layout_height="33dp"
                        android:height="35dp"
                        android:background="@drawable/text_field"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/ie_city"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="#838383"
                        android:textColorHighlight="#009688"
                        android:textColorHint="#959595"
                        android:textSize="16sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/postal_code_panel"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/postalCodeTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="10px"
                        android:text="@string/postal_code"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/postal_code_onboarding"
                        android:layout_width="120dp"
                        android:layout_height="33dp"
                        android:height="33dp"
                        android:background="@drawable/text_field"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/ie_postal_code"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="#838383"
                        android:textColorHighlight="#009688"
                        android:textColorHint="#959595"
                        android:textSize="16sp" />
                </LinearLayout>
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/province_tag"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="10px"
                android:text="@string/province"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:id="@+id/province_onboarding"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:hint="@string/ie_province"
                android:background="@drawable/text_field"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#838383"
                android:textColorHighlight="#009688"
                android:textColorHint="#959595"
                android:textSize="16sp"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />


            <LinearLayout
                android:id="@+id/dob_panel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/country_onboarding"
                    android:layout_width="match_parent"
                    android:background="@drawable/text_field"
                    app:ccpDialog_backgroundColor="@color/primary_text"
                    android:layout_height="40dp"
                    app:ccp_showFullName="true"
                    app:ccp_showPhoneCode="false"
                    app:ccp_showNameCode="false"
                    app:ccp_defaultNameCode="CA"
                    android:theme="@style/Platform.MaterialComponents.Light"
                    />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="86dp" />

            <Button
                android:id="@+id/continue_button"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0px"
                android:layout_marginStart="0px"
                android:layout_marginTop="0px"
                android:height="30dp"
                android:textColor="@color/primary_text"
                android:background="@drawable/button_border"
                android:checkable="false"
                android:clickable="true"
                android:enabled="false"
                android:focusable="true"
                android:minHeight="45dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="@string/continue_button"
                android:textSize="18sp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="63dp"
                    android:layout_height="match_parent" />

                <Space
                    android:layout_width="63dp"
                    android:layout_height="match_parent" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:text="@string/name" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>