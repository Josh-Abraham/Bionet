<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="167dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo" />

    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/matching_status"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="@string/matching_status"
        android:textColor="#333333"
        android:textSize="36sp" />


    <TextView
        android:id="@+id/matching"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/matching"
        android:textColor="@color/primary"
        android:textSize="34sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="28dp" />

    <TextView
        android:id="@+id/face"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/primary"
        android:textSize="24sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center">

    <TextView
        android:id="@+id/fp_tag_0"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/primary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/fp_tag_1"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/primary"
        android:textSize="24sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center">

        <TextView
            android:id="@+id/iris_tag_0"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/primary"
            android:textSize="24sp" />

    <TextView
        android:id="@+id/iris_tag_1"
        android:layout_height="120dp"
        android:layout_width="180dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/primary"
        android:textSize="24sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">
    <Button
        android:id="@+id/homeButton"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:minHeight="45dp"
        android:text="@string/home"
        android:textColor="@color/primary_text"
        android:textSize="18sp" />
    </TableRow>
</LinearLayout>