<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:clickable="false"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/outerFrameOnboarding"
        android:layout_width="336dp"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/innerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:minHeight="45dp" />

            <TableRow
                android:layout_width="355dp"
                android:layout_height="174dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="337dp"
                    android:layout_height="157dp"
                    android:src="@drawable/logo" />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcomeTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/welcome"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/welcomeNameTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="Remove Agent"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/addAgentMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Agent Message"
                android:visibility="visible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="19dp" />

            <EditText
                android:id="@+id/agentIdField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:height="35dp"
                android:background="@drawable/text_field"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/employee_id"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColor="#838383"
                android:textColorHighlight="#009688"
                android:textColorHint="#959595"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <Button
                android:id="@+id/removeAgentButton"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0px"
                android:layout_marginStart="0px"
                android:layout_marginLeft="0px"
                android:layout_marginTop="0px"
                android:height="35dp"
                android:background="@drawable/button_border"
                android:enabled="true"
                android:minHeight="45dp"
                android:text="@string/remove_agent"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />


        </LinearLayout>

    </FrameLayout>
</LinearLayout>