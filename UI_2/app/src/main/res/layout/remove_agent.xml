<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:clickable="false"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/outerFrameOnboarding"
        android:layout_width="336dp"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/innerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:minHeight="45dp" />

            <TableRow
                android:layout_width="355dp"
                android:layout_height="174dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="337dp"
                    android:layout_height="157dp"
                    android:src="@drawable/logo" />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcomeNameTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Remove Agent"
                    android:textAlignment="textStart"
                    android:textColor="@color/primary"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="19dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/manager_ID"
                        android:layout_width="138dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/manager_id"
                        android:textAlignment="textStart"
                        android:textColor="@color/secondary_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/manager_id_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/manager_id_value" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/agent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/agent_name"
                    android:textAlignment="textStart"
                    android:textColor="@color/secondary_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/agent_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/agent_name_value" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/manager_remove_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manager_remove_confirmation"
                android:textColor="@color/dark_text"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="19dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_password"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:height="35dp"
                android:background="@drawable/text_field"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/password"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColor="#838383"
                android:textColorHighlight="#009688"
                android:textColorHint="#959595"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="64dp" />

            <Button
                android:id="@+id/removeAgentButton"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0px"
                android:layout_marginStart="0px"
                android:layout_marginLeft="0px"
                android:layout_marginTop="0px"
                android:height="35dp"
                android:background="@drawable/button_border"
                android:enabled="true"
                android:minHeight="45dp"
                android:text="@string/remove_agent"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <Button
                android:id="@+id/cancelAgentRemove"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0px"
                android:layout_marginStart="0px"
                android:layout_marginLeft="0px"
                android:layout_marginTop="0px"
                android:height="35dp"
                android:background="#00FFFFFF"
                android:enabled="true"
                android:minHeight="45dp"
                android:text="@android:string/cancel"
                android:textColor="@color/primary_light"
                android:textSize="18sp" />


        </LinearLayout>

    </FrameLayout>
</LinearLayout>